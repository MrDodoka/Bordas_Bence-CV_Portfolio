<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Team Fortress 2 Voice Lines</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TeamFortress2_SoundPlayer_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Team Fortress 2 Voice Lines</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Responses</a>
                            <div class="dropdown-menu">
                                <span class="dropdown-title">Offensive</span>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Scout">Scout</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Soldier">Soldier</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Pyro">Pyro</a>
                                <div class="dropdown-divider"></div>
                                <span class="dropdown-title">Defensive</span>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Demoman">Demoman</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Heavy">Heavy</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Engineer">Engineer</a>
                                <div class="dropdown-divider"></div>
                                <span class="dropdown-title">Support</span>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Medic">Medic</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Sniper">Sniper</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Spy">Spy</a>
                                <div class="dropdown-divider"></div>
                                <span class="dropdown-title">Other</span>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Administrator">Administrator</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Halloween Bosses">Halloween Bosses</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Wheatley">Wheatley</a>
                                <a class="dropdown-item" asp-route="Response" asp-route-mercenary="Miss Pauling">Miss Pauling</a>
                                <a class="dropdown-item" href="#">Davy Jones</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Voice Commands</a>
                            <div class="dropdown-menu">
                                <span class="dropdown-title">Offensive</span>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Scout">Scout</a>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Soldier">Soldier</a>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Pyro">Pyro</a>
                                <div class="dropdown-divider"></div>
                                <span class="dropdown-title">Defensive</span>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Demoman">Demoman</a>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Heavy">Heavy</a>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Engineer">Engineer</a>
                                <div class="dropdown-divider"></div>
                                <span class="dropdown-title">Support</span>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Medic">Medic</a>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Sniper">Sniper</a>
                                <a class="dropdown-item" asp-route="VoiceCommand" asp-route-mercenary="Spy">Spy</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-route="About">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/soundPlayer.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
